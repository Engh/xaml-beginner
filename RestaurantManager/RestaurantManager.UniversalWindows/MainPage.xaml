<Page
    x:Class="RestaurantManager.UniversalWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UniversalWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="512*"/>
            <ColumnDefinition Width="512*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Title" TextAlignment="Center" TextWrapping="Wrap" Text="Restaurant Manager" Foreground="#FFCCCCCC" Height="85" Width="1024" Grid.ColumnSpan="2" FontSize="54" Margin="0,240,0,443"/>
        <TextBlock x:Name="Subtitle" TextAlignment="Center" TextWrapping="Wrap" Text="Internal Test Version" Foreground="#FFCCCCCC" FontSize="30" Height="50" Width="1024" Grid.ColumnSpan="2" Margin="0,351,0,332"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="115,578,0,0" TextWrapping="Wrap" Text="**Go to Orders View**" VerticalAlignment="Top" Foreground="#FFCCCCCC" FontSize="32"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="159,578,0,0" TextWrapping="Wrap" Text="**Submit Order**" VerticalAlignment="Top" Foreground="#FFCCCCCC" FontSize="32" Grid.Column="1"/>

    </Grid>
</Page>
